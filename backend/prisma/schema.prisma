// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String
  password     String // shouldnt be in plain text, we're using hashing
  status       String    @default("")
  profileImg   Bytes?
  calender     Calender?
  createdWaves Wave[]    @relation("creator")
  hasWaves     Wave[]    @relation("users", fields: [hasWaveIds], references: [id])
  hasWaveIds   String[]  @db.ObjectId
}

model Calender {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  availability Timeslot[]
  hasUser      User       @relation(fields: [userId], references: [id])
  userId       String     @unique @db.ObjectId
}

type Timeslot {
  startTime DateTime
  endTime   DateTime
  details   String   @default("")
}

model Wave {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  createdBy   User     @relation("creator", fields: [createdById], references: [id])
  createdById String   @db.ObjectId
  hasUsers    User[]   @relation("users", fields: [hasUsersId], references: [id])
  hasUsersId  String[] @db.ObjectId
}
